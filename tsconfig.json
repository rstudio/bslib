{
  "declaration": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true
  },
  "include": [
    "srcts/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
